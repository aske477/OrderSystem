<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="飲料"
        android:textSize="10pt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/textView3"
        app:layout_constraintTop_toBottomOf="@id/textView3"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="甜度"
        android:textSize="10pt"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/gridview"
        app:layout_constraintTop_toBottomOf="@id/gridview" />

    <RadioGroup
        android:id="@+id/suger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/textView4"
        app:layout_constraintTop_toBottomOf="@id/textView4">

        <RadioButton
            android:id="@+id/suger1"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:text="無糖" />

        <RadioButton
            android:id="@+id/suger2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="少糖" />

        <RadioButton
            android:id="@+id/suger3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="半糖" />

        <RadioButton
            android:id="@+id/suger4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="正常"
            android:checked="true"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="冰塊"
        android:textSize="10pt"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/suger"
        app:layout_constraintTop_toBottomOf="@id/suger" />

    <RadioGroup
        android:id="@+id/ice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/textView5"
        app:layout_constraintTop_toBottomOf="@id/textView5">

        <RadioButton
            android:id="@+id/ice1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="去冰" />

        <RadioButton
            android:id="@+id/ice2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="微冰" />

        <RadioButton
            android:id="@+id/ice3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="少冰" />

        <RadioButton
            android:id="@+id/ice4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="正常冰"
            android:checked="true"/>

    </RadioGroup>

    <Button
        android:id="@+id/button_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="送出"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/ice"
        app:layout_constraintTop_toBottomOf="@id/ice"/>


</androidx.constraintlayout.widget.ConstraintLayout>